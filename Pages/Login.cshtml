@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<section class="h-100 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-2 pb-2 pb-md-0 mb-md-3 px-md-2">Zaloguj się</h3>

                        <form asp-route-returnUrl="@Model.ReturnUrl" class="px-md-2" method="post">
                            <div class="form-outline mb-2">
                                <span asp-validation-for="User.UserName" class="text-danger"></span>
                                <input type="text" asp-for="User.UserName" class="form-control" />
                                <label class="form-label" asp-for="User.UserName"></label>
                            </div>

                            <div class="form-outline mb-2">
                                <span asp-validation-for="User.Password" class="text-danger"></span>
                                <input type="password" asp-for="User.Password" class="form-control" />
                                <label class="form-label" asp-for="User.Password"></label>
                            </div>

                      
                            <div class="mb-4">
                                <div class="form-check">
                                    <label asp-for="User.RememberMe">
                                        <input asp-for="User.RememberMe" />
                                        @Html.DisplayNameFor(m => m.User.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success btn-lg mb-1">Zaloguj</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
